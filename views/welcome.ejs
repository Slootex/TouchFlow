        }

        .welcomeanimation-left {
            animation-name: welcomeanimationleft;
            animation-duration: 2s;
            animation-fill-mode: forwards;
        }
        .welcomeanimation-right {
            animation-name: welcomeanimationright;
            animation-duration: 2s;
            animation-fill-mode: forwards;
        }

        ::-ms-reveal {
            filter: invert(100%);
        }
        
        @keyframes welcomeanimationleft {
            from {margin-right: 0rem}
            to {margin-right: 50rem}
        }
        @keyframes welcomeanimationright {
            from {margin-left: 0rem}
            to {margin-left: 50rem}
        }

