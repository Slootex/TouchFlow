<% let today = new Date().getDate(); %>
<% let hour = new Date().getHours(); %>            
    <div  class=" h-full right-4 ">
        <svg style="color: #ffffff" onclick="fullScreenCalender()" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 absolute right-8 top-8 z-0">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" />
        </svg>          

        <div class="mt-6 flex">
            <p class="text-6xl font-semibold text-white"id="current-time"><%= hr %>:<%= min %><span class=" ml-1 text-4xl"><%= seconds %></span></p>
        </div>
        <div class="flex mt-6">
            <% let todayName = new Date().toLocaleString('de-de', {  weekday: 'long' }); %>
            <h1 style="color: #ffffff;" class="text-white text-4xl tracking-wide font-semibold"><%= today %></h1>
            <p style="color: #ffffff" class="text-2xl text-white mt-2 ml-1"><%= todayName %></p>
        </div>
    <div id="calender-time" class="overflow-auto scrollbar" style="max-height: 82.5%">
        <% for (let i = 0; i < 24; i++) { %>
            <div class="flex w-full border border-l-0 border-r-0 border-b-0 border-zinc-700 mt-2">
                <% if (i === hour) { %>
                    <p id="quick-date-<%= i %>" style="color: rgb(157, 88, 166)" class=" text-xl rounded-xl"><%= i.toString().padStart(2, '0') %>:00 Uhr</p>
                <% } else { %>
                    <p id="quick-date-<%= i %>" style="color: #ffffff" class="text-white text-xl"><%= i.toString().padStart(2, '0') %>:00 Uhr</p>
                <% } %>
                <div class="h-24 w-full mt-2">
                    <% tasks.forEach(task => { %>
                        <% const taskHour = parseInt(task.time.split(':')[0]); %>
                        <% if (taskHour == i) { %>
                            <div class="w-full bg-zinc-700 rounded-md h-24 px-4 py-2">
                                <p class="text-white text-lg"><%= task.title %></p>
                                <div class="flex mt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3 text-zinc-300 mt-1">
                                        <path fill-rule="evenodd" d="m9.69 18.933.003.001C9.89 19.02 10 19 10 19s.11.02.308-.066l.002-.001.006-.003.018-.008a5.741 5.741 0 0 0 .281-.14c.186-.096.446-.24.757-.433.62-.384 1.445-.966 2.274-1.765C15.302 14.988 17 12.493 17 9A7 7 0 1 0 3 9c0 3.492 1.698 5.988 3.355 7.584a13.731 13.731 0 0 0 2.273 1.765 11.842 11.842 0 0 0 .976.544l.062.029.018.008.006.003ZM10 11.25a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5Z" clip-rule="evenodd" />
                                    </svg>
                                    <!--<p class="text-zinc-300 text-sm ml-2">Matenzeile 7, 13053</p>-->
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>
        <% } %>

    
    </div>
    </div>
